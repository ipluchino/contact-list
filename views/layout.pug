        link(rel='stylesheet', href='/contact.css')
        
    body
        if !hide_login 
            navbar.navbar.navbar-expand.bg-dark.navbar-dark.mb-5
                if user
                    ul.navbar-nav.ml-auto
                        li.nav-item
                            span.navbar-text.text-white.ms-1 #{user.first_name} #{user.last_name}
                    ul.navbar-nav.ms-auto
                        li.nav-item
                            a.nav-link.text-white(href='/logout') Log out
                else
                    ul.navbar-nav.ml-auto
                        li.nav-item
                            a.nav-link.text-white(href='/login') Sign in
        block content